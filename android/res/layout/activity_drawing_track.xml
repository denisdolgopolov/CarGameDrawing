<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <d.dolg.cardrawing.draw_view.DrawView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/drawing_canvas"
        android:background="#80FFFFFF"
        />


    <RelativeLayout
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp">
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:text="up"
            android:id="@+id/b_up"
            android:background="@drawable/ic_up_arrow"
            android:layout_centerHorizontal="true"/>
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/b_down"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:background="@drawable/ic_up_arrow"
            android:rotation="180"/>
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/b_right"
            android:layout_centerVertical="true"
            android:background="@drawable/ic_up_arrow"
            android:rotation="270"/>
        <ImageButton
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:id="@+id/b_left"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:background="@drawable/ic_up_arrow"
            android:rotation="90"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/list_drawing_tool"
        android:layout_alignParentBottom="true"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/next"
        android:layout_alignParentEnd="true"
        android:layout_above="@id/list_drawing_tool"
        android:layout_marginEnd="10dp"
        android:id="@+id/b_start_game"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardUseCompatPadding="true"
        app:cardElevation="5dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/parent_mini_map"
        app:cardBackgroundColor="@android:color/transparent">
        <ImageView
            android:layout_width="85dp"
            android:layout_height="85dp"
            android:id="@+id/drawing_mini_map"/>
    </androidx.cardview.widget.CardView>




</RelativeLayout>